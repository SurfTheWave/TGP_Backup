<apex:page standardController="FTE_Details__c" extensions="RestrictEdit" action="{!RestrictEditAccess}">
    <apex:form >
        <apex:OutputPanel id="opid1" >
             <apex:outputPanel styleClass="popupBackground" layout="block"/> 
                 <apex:outputPanel styleClass="custPopup" layout="block">                 
                 <p> <apex:outputText value="{!error}" label="Error" /></p>
                 <apex:commandButton value="Ok" action="{!popUpRedirect}" />          
             </apex:outputPanel>      
         </apex:OutputPanel>
    </apex:form>
    <style type="text/css">
        .custPopup{
            background-color: white;
            border-width: 2px;
            border-style: solid;
            z-index: 9999;
            left: 50%;
            padding:10px;
            position: absolute;
            width: 500px;
            margin-left: -250px;
            top:100px;
        }
        .popupBackground{
            background-color:black;
            opacity: 0.20;
            filter: alpha(opacity = 20);
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 9998;
        }

    </style> 
</apex:page>